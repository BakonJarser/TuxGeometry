<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/linear_layout"
                                             android:orientation="horizontal"
                                             android:background="@color/colorPrimaryLight">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shape1"
        android:src="@drawable/circle"
        android:contentDescription="@string/drag_drop"
        app:layout_constraintRight_toLeftOf="@id/answer1"
        app:layout_constraintLeft_toRightOf="@id/answer1"
        app:layout_constraintBottom_toTopOf="@id/answer1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginRight="-1dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shape2"
        tools:src="@drawable/circle"
        android:contentDescription="@string/drag_drop"
        app:layout_constraintRight_toLeftOf="@id/answer2"
        app:layout_constraintLeft_toRightOf="@id/answer2"
        app:layout_constraintBottom_toTopOf="@id/answer2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shape3"
        tools:src="@drawable/circle"
        android:contentDescription="@string/drag_drop"
        app:layout_constraintLeft_toRightOf="@id/answer3"
        app:layout_constraintRight_toLeftOf="@id/answer3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/answer3"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintVertical_bias="0.517"/>

    <TextView
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="text1"
        android:id="@+id/textView1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView2"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

    <TextView
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="text2"
        android:id="@+id/textView2"
        app:layout_constraintRight_toLeftOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@id/textView1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center" />

    <TextView
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="text3"
        android:id="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textView2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"/>

    <TextView
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Large Text"
        android:id="@+id/answer1"
        app:layout_constraintLeft_toRightOf="@id/textView1"
        app:layout_constraintRight_toLeftOf="@id/textView1"
        app:layout_constraintBottom_toTopOf="@id/textView1"
        android:visibility="visible"
        android:background="#ff235fff"
        android:textColor="#ff235fff"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Large Text"
        android:id="@+id/answer2"
        app:layout_constraintLeft_toRightOf="@id/textView2"
        app:layout_constraintRight_toLeftOf="@id/textView2"
        app:layout_constraintBottom_toTopOf="@id/textView2"
        android:visibility="visible"
        android:background="#ff7707ff"
        android:textColor="#ff7707ff"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Large Text"
        android:id="@+id/answer3"
        app:layout_constraintLeft_toRightOf="@id/textView3"
        app:layout_constraintRight_toLeftOf="@id/textView3"
        app:layout_constraintBottom_toTopOf="@id/textView3"
        android:visibility="visible"
        android:background="#fff35cff"
        android:textColor="#fff35cff"
        android:gravity="center"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="32dp"/>

</android.support.constraint.ConstraintLayout>